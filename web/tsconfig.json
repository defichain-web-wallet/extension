{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./js",    
    "types": [
      "node",
      "chrome"
    ],
    "declaration": true,
    "rootDir": "./src_ts",
    "allowJs": false,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
      "**/*.ts"      ],
  "exclude": [
      "**/*.spec.ts",
      "node_modules/**/*"
  ]
}
